<body>
<div class="container">

    <div class="top-bar">
        <h2>📋 Patient Visit Records</h2>
        <button onclick="goBack()">⬅ Back</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Disease</th>
                <th>Priority</th>
                <th>Time</th>
                <th>BP</th>
                <th>Temp</th>
                <th>Weight</th>
                <th>Phone</th>
                <th>Date</th>
                <th>Doctor</th>
                <th>Specialization</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody"></tbody>
    </table>

</div>

<script>
async function loadData(){
    try{
        const res = await fetch("http://localhost:3000/patients");
        const data = await res.json();

        const tbody = document.getElementById("tableBody");
        tbody.innerHTML = "";

        data.forEach(p=>{
            tbody.innerHTML += `
            <tr>
                <td>${p.patient_id}</td>
                <td>${p.patient_name}</td>
                <td>${p.gender}</td>
                <td>${p.age}</td>
                <td>${p.disease}</td>
                <td>${p.priority ?? "-"}</td>
                <td>${p.time_slot ?? "-"}</td>
                <td>${p.blood_pressure ?? "-"}</td>
                <td>${p.temperature ?? "-"}</td>
                <td>${p.weight_kg ?? "-"}</td>
                <td>${p.phone_number}</td>
                <td>${new Date(p.visit_date).toLocaleDateString()}</td>
                <td>${p.doctor_name}</td>
                <td>${p.doctor_specialization}</td>
                <td>
                    <button class="action-btn edit-btn" onclick="editPatient(${p.patient_id})">Edit</button>
                    <button class="action-btn delete-btn" onclick="deletePatient(${p.patient_id})">Delete</button>
                </td>
            </tr>`;
        });
    }catch(err){
        alert("❌ Data load error");
        console.error(err);
    }
}

function goBack(){
    window.location.href = "index.html";
}

async function deletePatient(id) {
    if (confirm("Do you want to cancel your appointment?")) {
        const res = await fetch(`/patients/${id}`, { method: "DELETE" });
        if (res.ok) {
            alert("Deleted!");
            loadData();
        } else {
            alert("Delete failed!");
        }
    }
}

// Edit button: Go to index.html with data in localStorage
async function editPatient(id) {
    // Find the row for existing values
    const row = Array.from(document.querySelectorAll('#tableBody tr'))
      .find(r => r.firstElementChild && Number(r.firstElementChild.textContent) === id);

    if (!row) { alert("Row not found!"); return; }
    const editData = {
        patient_id: row.children[0].textContent,
        patient_name: row.children[1].textContent,
        gender: row.children[2].textContent,
        age: row.children[3].textContent,
        disease: row.children[4].textContent,
        priority: row.children[5].textContent,
        time_slot: row.children[6].textContent,
        blood_pressure: row.children[7].textContent,
        temperature: row.children[8].textContent,
        weight_kg: row.children[9].textContent,
        phone_number: row.children[10].textContent
    };
    localStorage.setItem("editPatientData", JSON.stringify(editData));
    window.location.href = "index.html?edit=1";
}

loadData();
</script>
</body>
</html>
